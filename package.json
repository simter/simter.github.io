    "watch": "rollup -c -f iife -w -o dist/index.js",
    "minHtml": "minimize --output index.html src/index.html"
  },
  "dependencies": {
    "vue": "^2.1.8",
    "koa": "^1.2.4",
    "koa-static": "^2.0.0"
  },
