  },
  "scripts": {
    "clean": "rm -rf dist test/temp",
    "test": "ava test/index.js",
    "pretest": "npm run build",
    "build": "npm run minHtml && rollup -c -f iife -o dist/index.js",
    "prepublish": "npm test",
