    "cssnano": "^3.9.1",
    "minimize": "^2.0.0",
    "rollup": "^0.38.2",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-md": "0.0.7",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-plugin-vue2": "^0.6.1",
    "rollup-watch": "^2.5.0"
